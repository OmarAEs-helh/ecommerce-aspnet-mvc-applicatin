@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List Of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <h2 class="mb-4 text-center">List of Cinemas</h2>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle text-center">@Html.DisplayNameFor(model => model.Logo)</th>
                    <th class="align-middle text-center">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="align-middle text-center">@Html.DisplayNameFor(model => model.Description)</th>
                    <th class="align-middle text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle text-center">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 100px;" />
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle text-center">
                            <a class="btn btn-outline-primary me-1" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-outline-info me-1" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i> Detail
                            </a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
